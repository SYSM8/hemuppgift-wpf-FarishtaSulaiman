<Window x:Class="Hemuppgift_WPFtemplate.DockPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hemuppgift_WPFtemplate"
        mc:Ignorable="d"
        Title="DockPanel" Height="450" Width="800">
    <Grid>

        <DockPanel>
            <Button Content="Top" DockPanel.Dock="Top" Height="30" Width="80" Margin="5" Click="Button_Click"/>
            <Button Content="Left" DockPanel.Dock="Left" Height="30" Width="80" Margin="5" Click="Button_Click_3"/>
            <Button Content="Right" DockPanel.Dock="Right" Height="30" Width="80" Margin="5" Click="Button_Click_1"/>
            <Button Content="Bottom" DockPanel.Dock="Bottom" Height="30" Width="80" Margin="5" Click="Button_Click_2"/>
            <Button Content="Center" Height="30" Width="80" Margin="5" Click="Button_Click_4" />
        </DockPanel>

        <!-- Bilden som visas när knappen klickas, dold från början -->
        <Image x:Name="centerImage" Source="TrophyImage.jpg" 
                   Width="200" Height="200" Visibility="Collapsed" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" />
        
    
    </Grid>
</Window>
